@model UserLoginModel
@{

}
<section id="main" class="clearfix user-page">
    <div class="container">
        <div class="row text-center">
            <!-- user-login -->
            <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                <div class="user-account">
                    <h2>فرم ورود</h2>
                    <!-- form -->
                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <input type="text" asp-for=UserName class="form-control" placeholder="شماره موبایل,ایمیل,نام کاربری">
                            <span class="text-danger m-3" asp-validation-for="@Model.UserName"></span>
                        </div>
                        <div class="form-group">
                            <input type="password" asp-for=Password class="form-control" placeholder="رمزعبور">
                            <span class="text-danger m-3" asp-validation-for="@Model.Password"></span>
                        </div>
                        @if (ViewBag.ErrorMessage is not null)
                        {
                            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                        }
                        <button type="submit" class="btn">ورود</button>
                    </form><!-- form -->
                    <!-- forgot-password -->
                </div>
                <a asp-action="Register" class="btn-primary">ساخت اکانت جدید</a>
            </div><!-- user-login -->
        </div><!-- row -->
    </div><!-- container -->
</section><!-- signin-page -->