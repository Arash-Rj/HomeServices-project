@using Src.Domain.Core.AAM.ManageUser.Enums
@using Framework
@model UserRegisterModel
<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    کاربران
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form asp-action="Register" enctype="multipart/form-data" id="simple-form" role="form" method="post">
                    <div class="form-body">

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="UserName" class="form-control" type="text" placeholder="نام کاربری" />
                                <span class="text-danger m-3" asp-validation-for="@Model.UserName"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Email" class="form-control" type="email" placeholder="ایمیل" required />
                                <span class="text-danger m-3" asp-validation-for="@Model.Email"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" type="password" placeholder="رمز عبور" />
                                 <span class="text-danger m-3" asp-validation-for="@Model.Password"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <select asp-for="Role" class="form-select">
                                    <option value="0">@RoleEnum.Customer.GetEnumDisplayName()</option>
                                    <option value="1">@RoleEnum.Expert.GetEnumDisplayName()</option>
                                    <option value="2">@RoleEnum.Admin.GetEnumDisplayName()</option>
                                </select>
                            </div>
                        </div>
                     @* 
                        <div class="form-group relative">
                            <input asp-for="User.ProfileImgFile" type="file" class="form-control">
                            <label>آپلود عکس</label>
                            <div class="input-group round">
                                <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success">
                                        <i class="icon-picture"></i>
                                        آپلود عکس
                                        <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                                    </button>
                                </span>
                            </div><!-- /.input-group -->
                            <div class="help-block"></div>
                        </div> *@

                    </div>
                    <hr>
                    <div class="form-actions">
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                    </div>
                    <div class="form-actions">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-warning">
                        بازگشت
                    </a>
                    </div>
                    </div>
                    @if (ViewBag.ErrorMessage is not null)
                    {
                        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                    }
                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->